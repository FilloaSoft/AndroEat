<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto">

    <GridView
        android:id="@+id/home_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:layout_marginLeft="4dp"
        />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEDED"
        fab:itemTextColor="@color/bottom_nav_color"
        fab:itemIconTint="@color/bottom_nav_color"
        fab:layout_constraintBottom_toBottomOf="parent"
        fab:layout_constraintLeft_toLeftOf="parent"
        fab:layout_constraintRight_toRightOf="parent"
        fab:labelVisibilityMode="labeled"
        fab:menu="@menu/navigation"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="findRecipes"
        android:textColor="#FFFFFF"
        android:background="@color/colorAccent"
        android:layout_above="@id/navigation"
        android:layout_alignBaseline="@id/menu_fab"
        android:layout_margin="17dp"
        android:layout_centerHorizontal="true"
        android:text="Find recipes" />

</android.widget.RelativeLayout>