<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_scanner"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/Imagen_camara"
        android:layout_width="172dp"
        android:layout_height="291dp"
        android:layout_marginTop="56dp"
        android:contentDescription="@string/camera_image"
        fab:layout_constraintEnd_toEndOf="parent"
        fab:layout_constraintHorizontal_bias="0.497"
        fab:layout_constraintStart_toStartOf="parent"
        fab:layout_constraintTop_toTopOf="parent"
        fab:srcCompat="@drawable/coke_can" />

    <ImageButton
        android:id="@+id/accion_escanear"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/ic_camera"
        android:contentDescription="@string/scan_button"
        android:onClick="scan"
        android:scaleType="fitXY"
        fab:layout_constraintEnd_toEndOf="parent"
        fab:layout_constraintStart_toStartOf="parent"
        fab:layout_constraintTop_toBottomOf="@+id/Imagen_camara" />

</android.support.constraint.ConstraintLayout>