<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto">

    <ListView
        android:id="@+id/basketList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEDED"
        fab:itemTextColor="@color/bottom_nav_color"
        fab:itemIconTint="@color/bottom_nav_color"
        fab:layout_constraintBottom_toBottomOf="parent"
        fab:layout_constraintLeft_toLeftOf="parent"
        fab:layout_constraintRight_toRightOf="parent"
        fab:labelVisibilityMode="labeled"
        fab:menu="@menu/navigation"
        android:layout_alignParentBottom="true"/>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
    android:id="@+id/menu_fab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end|bottom"
    android:layout_above="@id/navigation"
    android:layout_alignParentRight="true"
    fab:fab_addButtonColorNormal="?attr/colorPrimary"
    fab:fab_addButtonSize="normal"
    fab:fab_labelStyle="@style/Etiquetas"
    fab:fab_labelsPosition="left"
    fab:fab_addButtonColorPressed="@color/colorPrimaryDark">

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/accion_favorito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="#D9DCE0"
        fab:fab_icon="@drawable/ic_search"
        fab:fab_size="mini"
        fab:fab_colorPressed="@color/colorPrimaryDark"/>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/accion_buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="#D9DCE0"
        fab:fab_icon="@drawable/ic_camera"
        fab:fab_size="mini"
        fab:fab_colorPressed="@color/colorPrimaryDark"/>

</com.getbase.floatingactionbutton.FloatingActionsMenu>

    <Button
        android:id="@+id/button1"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="@color/colorAccent"
        android:layout_above="@id/navigation"
        android:layout_alignBaseline="@id/menu_fab"
        android:layout_margin="17dp"
        android:layout_centerHorizontal="true"
        android:text="Find recipes" />

</android.widget.RelativeLayout>